@model IEnumerable<SimpleMemberShip.Models.CarteSet>

@{
    ViewBag.Title = "Index";
}

<h3><center>Liste des cartes</center></h3>

<p>
    @Html.ActionLink("Ajouter Une Carte", "FileUpload")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsersSet.Username)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        var base64 = Convert.ToBase64String(item.Path);
        var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);

        //byte[] imageByteData = System.IO.File.ReadAllBytes(path1);
        //string imageBase64Data = Convert.ToBase64String(imageByteData);
        //string imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);
        //ViewBag.ImageData = imageDataURL;
        <tr>
            <td>
                <img src='@imgsrc' width="150" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.UsersSet.Username)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
